                <ul class="dropdown btn btn-default navbar-btn navbar-right infoButton">
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                       aria-expanded="false" id="btnText">LOGIN / REGISTER <span class="caret"></span></a>

                    {{# if checkSessionExists }}
                        <ul class="dropdown-menu" aria-labelledby="loginDrop">
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    {{else}}
                        <ul class="dropdown-menu" aria-labelledby="loginDrop">
                            <li><a href="login_registration.html">Login</a></li>
                            <li><a href="login_registration.html">Register New Account</a></li>
                        </ul>
